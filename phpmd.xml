<?xml version="1.0"?>
<ruleset
	name="PHPMD for WordPress theme/plugin"
	xmlns="http://pmd.sf.net/ruleset/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd"
	xsi:noNamespaceSchemaLocation=" http://pmd.sf.net/ruleset_xml_schema.xsd">

	<description>Custom rules of PHPMD for WordPress theme/plugin</description>

	<!-- Files to check. -->
	<file>.</file>

	<!-- Exclude paths. -->
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/tests/*</exclude-pattern>

	<!-- Import the cleancode rule set with exceptions -->
	<rule ref="rulesets/cleancode.xml">
		<exclude name="ElseExpression" />
	</rule>

	<!-- Import the entire codesize rule set -->
	<rule ref="rulesets/codesize.xml" />

	<!-- Import the entire design rule set -->
	<rule ref="rulesets/design.xml" />

	<!-- Import the naming rule set with exceptions -->
	<rule ref="rulesets/naming.xml">
		<exclude name="ShortVariable" />
		<exclude name="LongVariable" />
	</rule>

	<!-- Import the entire unused code rule set -->
	<rule ref="rulesets/unusedcode.xml" />

</ruleset>
