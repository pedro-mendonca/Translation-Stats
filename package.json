{
	"requires": true,
	"lockfileVersion": 1,
	"name": "translation-stats",
	"version": "1.2.0",
	"description": "The plugin adds a \"Translation Stats\" column to the plugin list screen in WordPress admin.",
	"author": "Pedro Mendon√ßa",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"WordPress",
		"i18n",
		"l10n"
	],
	"homepage": "https://github.com/pedro-mendonca/Translation-Stats#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pedro-mendonca/Translation-Stats.git"
	},
	"bugs": {
		"url": "https://github.com/pedro-mendonca/Translation-Stats/issues"
	},
	"devDependencies": {
		"@wordpress/scripts": "^19.2.1",
		"node-sass": "^6.0.1",
		"sass-lint": "^1.13.1",
		"scss": "^0.2.4",
		"tablesorter": "^2.31.3",
		"uglify-js": "^3.14.3"
	},
	"scripts": {
		"compile:js": "npm run compile:js:plugins && npm run compile:js:settings",
		"compile:js:plugins": "uglifyjs assets/js/admin-plugins.js --compress drop_console=true -o assets/js/admin-plugins.min.js",
		"compile:js:settings": "uglifyjs assets/js/admin-settings.js --compress drop_console=true -o assets/js/admin-settings.min.js",
		"compile:css": "node-sass assets/css/ -o assets/css/ && stylelint assets/css/*.css --fix",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"lint:md:docs": "wp-scripts lint-md-docs",
		"lint:pkg-json": "wp-scripts lint-pkg-json"
	}
}
